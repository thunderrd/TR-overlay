
## ~/.Xdefaults-xm
## for *Xmonad login ONLY* [linked to ~.Xresources-xm]


#####################################################
## USE 2 HASH MARKS or '!' TO COMMENT OUT LINES ############
#####################################################



############ URXVT STUFFS #################

! URxvt.font: xft:Droid Sans Mono:size=13
! URxvt*font: xft:Bitstream Vera Sans Mono:size=11
! URxvt*font: xft:Liberation Mono:size=11
URxvt*font: xft:Go Mono:style=Bold:size=11

URxvt*buffered: true

## To remove the scrollbar
URxvt*scrollBar: off

############ PERL related #######################

## To invoke perl extensions  
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt*perl-ext-common: default,matcher

## if we want a tabbed window, add 'tabbed' to the above,
## and uncomment the following lines to change the tab colors if we want:

! URxvt*tabbed.tabbar-fg:  2
! URxvt*tabbed.tabbar-bg:  0
! URxvt*tabbed.tab-fg:  3
! URxvt*tabbed.tab-bg:  0

## To have clickable links in urxvt
URxvt*url-launcher: /usr/bin/palemoon
URxvt*matcher.button:  1
 
########### End PERL related ####################


### Transparency stuffs ######################

## real transparency
URxvt*depth: 32

## #DEB887=burlywood
URxvt*foreground: #deb887

## Set the background color tint: [% opacity]#hexvalue    d0d0d0
URxvt*background: [0]#505050

## Fade the foreground color: [%_of_fade], 100 is completely invisible
URxvt*fading: 10

! URxvt*shading: 5

## Fade the inactive windows and tint with this color: [%_of_fade]#xxxxxx
URxvt*fadeColor: [5]#00f6ff

! Apply gaussian blur with the specified radius to the transparent background.
! If a single number is specified, the vertical and horizontal radii are considered to be the same. 
! Setting one of the radii to 1 and the other to a large number creates interesting effects on some backgrounds.
! The maximum radius value is 128. An horizontal or vertical radius of 0 disables blur.
! URxvt*blurRadius:                     100x1

#### End Transparency section ##################


#### Other color settings ####################

URxvt.cursorColor:      [70]#ffbd70

URxvt.borderColor:  [0]#000000

! was #500000
URxvt.throughColor:     #ffffff

URxvt.highlightColor:   [80]#5b5b5b

! black
URxvt*color0:   #000000

! dark red
URxvt*color1:   #A80000

! green
URxvt*color2:   #00A800

! dirty yellow
URxvt*color3:   #A8A800

! dark blue
URxvt*color4:   #0000A8

! dark pink
URxvt*color5:   #A800A8

! aqua
URxvt*color6:   #00A8A8

! medium gray
URxvt*color7:   #A8A8A8

! near black
URxvt*color8:   #000054

! bright red
URxvt*color9:   #FF0054

! lime green
URxvt*color10:  #00FF54

! yellow
URxvt*color11:  #FFFF54

! was dark/medium blue    #0000FF
Rxvt*color12:  #FFFFFF

! mad pink
URxvt*color13:  #FF00FF

! light cyan
URxvt*color14:  #00FFFF

! white
URxvt*color15:  #FFFFFF

#### End color settings

#### MISC

## fix for underscore character not appearing
URxvt*lineSpace: 1

## Save lots of lines in scrollback
URxvt*saveLines:32767

#### END URXVT STUFFS #################



########### XTERM STUFFS BELOW ###################

XTerm*faceName: Liberation Mono
xterm*faceSize: 13

## width x height + x_position + y_position
XTerm*geometry: 120x40+200+200
xterm*saveLines: 16384
xterm*loginShell: true
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
xterm*termName: xterm-color
xterm*eightBitInput: false

