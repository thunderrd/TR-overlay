
## ~/.Xdefaults
## for Xfce login [linked to ~/.Xresources]



#####################################################
## USE 2 HASH MARKS OR ! TO COMMENT OUT LINES ############
#####################################################



############ URXVT STUFFS #################

## Font settings
URxvt*font: xft:Bitstream Vera Sans Mono:size=11
! URxvt*font: xft:Liberation Mono:size=11

## set default window size: width x height + x_position + y_position
URxvt*geometry: 140x38+300+125

URxvt*buffered: true

## To remove the scrollbar
URxvt*scrollBar: false

####### PERL related #########

## To invoke perl extensions  
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt*perl-ext-common:  default,matcher

## if we want a tabbed window, add 'tabbed' to the above,
## and uncomment the following lines to change the tab colors if we want:

! URxvt*tabbed.tabbar-fg:  2
! URxvt*tabbed.tabbar-bg:  0
! URxvt*tabbed.tab-fg:  3
! URxvt*tabbed.tab-bg:  0

## To have clickable links in urxvt
URxvt*url-launcher: /usr/bin/palemoon
URxvt*matcher.button:  1

####### End PERL related ########


### Transparency stuffs#########

## Real transparency [for Xfce with compiz]
URxvt*depth: 32
URxvt*foreground: burlywood

## Easiest way to set background color scheme: [% opacity]#hexvalue    #514E4A
URxvt*background: [70]#000000

## Fading
! URxvt*fading: 50
! URxvt*fadeColor: [30]#524f4b

#### End Transparency section ##############

#### Other color settings ####################

URxvt.cursorColor:      [70]#ffbd70

! was #500000
URxvt.throughColor:     #ffffff

URxvt.highlightColor:   [90]#5b5b5b

! black
URxvt*color0:   #000000

! dark red
URxvt*color1:   #A80000

! green
URxvt*color2:   #00A800

! dirty yellow
URxvt*color3:   #A8A800

! dark blue
URxvt*color4:   #0000A8

! dark pink
URxvt*color5:   #A800A8

! aqua
URxvt*color6:   #00A8A8

! medium gray
URxvt*color7:   #A8A8A8

! near black
URxvt*color8:   #000054

! bright red
URxvt*color9:   #FF0054

! lime green
URxvt*color10:  #00FF54

! yellow
URxvt*color11:  #FFFF54

! was dark/medium blue    #0000FF
URxvt*color12:  #FFFFFF

! mad pink
URxvt*color13:  #FF00FF

! light cyan
URxvt*color14:  #00FFFF

! white
URxvt*color15:  #FFFFFF

#### End color settings

####MISC

## fix for underscore character not appearing
URxvt*lineSpace: 1

#### END URVT STUFFS #####################



########### XTERM STUFFS ###################

XTerm*faceName: Bitstream Vera Serif Mono
xterm*faceSize: 11
## width x height + x_position + y_position
XTerm*geometry: 120x40+200+200
xterm*saveLines: 16384
xterm*loginShell: true
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
xterm*termName: xterm-color
xterm*eightBitInput: false

