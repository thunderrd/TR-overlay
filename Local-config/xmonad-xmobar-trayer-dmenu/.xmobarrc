-- ~/.xmobarrc
-- defines configuration for xmobar display

Config { 
--	 font = 		"xft:Droid Sans:style=Bold:pixelsize=13:antialias=true:autohint=true"	--sets font
	 font = 		"xft:Go:style=Bold:pixelsize=13:antialias=true"						--sets font		:autohint=true
       , additionalFonts = 	[]
       , alpha =			0									--255 [opaque]
       , bgColor = 		"#535148" 							--"#39352a" "#5e5a4e" "#8F8D82" "black"	      	 --panel color
       , fgColor = 		"burlywood"    		        		        --font color
       , position = 		TopW L 93                                                    --bar location; upper left, % of width
       , border = 		NoBorder
       , borderColor = 		"black"
       , hideOnStart = 		False
       , iconOffset = 		-1
       , lowerOnStart = 	True
       , persistent = 		True
       , commands = 		[ 
				  Run Weather "VTUD" ["-t"," <tempC>C","-L","20","-H","34","--normal","green","--high","red","--low","lightblue"] 36000 --weather 
		    		, Run Network "enp3s0" ["-L","0","-H","100","--normal","green","--high","#0EBFE9"] 10  --network widget
		    		, Run Network "sit1" ["-L","0","-H","100","--normal","green","--high","#0EBFE9"] 10  --network widget
                    		, Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10     --CPU widget
                    		, Run Memory ["-t","Mem: <usedratio>%"] 10                              --Memory widget
--                    			, Run Swap [] 10							    --Swap widget
                    		, Run Date "%a %b %_d %l:%M" "date" 10				    --Time and Date info
                    		, Run StdinReader							    --screen data from xmonad
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "     %StdinReader% }{ %cpu% | %memory% | %enp3s0% <> %sit1%  %VTUD%  <fc=burlywood>%date%</fc>    "	--VTUD is Udonthani code
       , textOffset = -1
       , overrideRedirect = False
       , allDesktops = True
       , pickBroadest = False
       , iconRoot = "."
       }
